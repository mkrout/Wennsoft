<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>userManagementExtension</display-name>

    <context-param>
        <param-name>org.exoplatform.frameworks.jcr.command.web.fckeditor.digitalAssetsWorkspace</param-name>
        <param-value>portal</param-value>
        <description>Binary assets workspace name</description>
    </context-param>

    <context-param>
        <param-name>org.exoplatform.frameworks.jcr.command.web.fckeditor.digitalAssetsPath</param-name>
        <param-value>/</param-value>
        <description>Binary assets path</description>
    </context-param>

    <!-- ================================================================== -->
    <!--           LISTENER                                                 -->
    <!-- ================================================================== -->
    <listener>
        <listener-class>org.exoplatform.container.web.PortalContainerConfigOwner</listener-class>
    </listener>
    <!-- ================================================================== -->
    <!--           SERVLET                                                  -->
    <!-- ================================================================== -->
    <servlet>
        <servlet-name>GateInServlet</servlet-name>
        <servlet-class>org.gatein.wci.api.GateInServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ForgetViewServlet</servlet-name>
        <servlet-class>org.wennsoft.web.login.ForgetViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ForgetServlet</servlet-name>
        <servlet-class>org.wennsoft.web.login.ForgetServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TermsAndConditionsViewServlet</servlet-name>
        <servlet-class>org.wennsoft.web.condition.TermsAndConditionsViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TermsAndConditionsActionServlet</servlet-name>
        <servlet-class>org.wennsoft.web.condition.TermsAndConditionsActionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordViewServlet</servlet-name>
        <servlet-class>org.wennsoft.web.changepassword.ChangePasswordViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordActionServlet</servlet-name>
        <servlet-class>org.wennsoft.web.changepassword.ChangePasswordActionServlet</servlet-class>
    </servlet>
    <!--  =================================================================  -->
    <servlet-mapping>
        <servlet-name>GateInServlet</servlet-name>
        <url-pattern>/gateinservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgetViewServlet</servlet-name>
        <url-pattern>/forgetView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ForgetServlet</servlet-name>
        <url-pattern>/forget</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TermsAndConditionsViewServlet</servlet-name>
        <url-pattern>/wennsoft-terms-and-conditions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TermsAndConditionsActionServlet</servlet-name>
        <url-pattern>/wennsoft-terms-and-conditions-action</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordViewServlet</servlet-name>
        <url-pattern>/wennsoft-change-password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordActionServlet</servlet-name>
        <url-pattern>/wennsoft-change-password-action</url-pattern>
    </servlet-mapping>
</web-app>
